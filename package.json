{
	"name": "bbtag",
	"displayName": "BBTag",
	"description": "A BBTag syntax highlighting extension",
	"author": "blargbot",
	"license": "MIT",
	"version": "0.1.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/blargbot/VSCode-BBTag"
	},
	"icon": "blargbot_icon.png",
	"publisher": "blargbot",
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.63.0"
	},
	"activationEvents": [
		"onLanguage:bbtag"
	],
	"main": "./out/client",
	"contributes": {
		"languages": [
			{
				"id": "bbtag",
				"aliases": [
					"BBTag"
				],
				"extensions": [
					"bbtag"
				],
				"configuration": "./languages/bbtag.language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "bbtag",
				"scopeName": "source.bbtag",
				"path": "./syntaxes/bbtag.tmLanguage.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "BBTag Configuration",
			"properties": {
				"bbtag.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"bbtag.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile:prod",
		"compile:prod": "npm run clean && webpack --mode production",
		"compile": "webpack",
		"watch": "webpack --watch",
		"clean": "rimraf out"
	},
	"dependencies": {
		"fuse.js": "^6.6.2",
		"node-fetch": "^2.6.7",
		"vscode-languageclient": "^7.0.0",
		"vscode-languageserver": "^7.0.0",
		"vscode-languageserver-textdocument": "^1.0.4"
	},
	"devDependencies": {
		"@types/node": "^16.11.7",
		"@types/node-fetch": "^2.6.2",
		"@types/glob": "^7.2.0",
		"@types/vscode": "^1.63.0",
		"@types/webpack-env": "^1.18.0",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"eslint": "^8.13.0",
		"rimraf": "^3.0.2",
		"ts-loader": "^9.3.1",
		"typescript": "^4.7.2",
		"webpack": "^5.74.0",
		"webpack-cli": "^4.10.0"
	}
}